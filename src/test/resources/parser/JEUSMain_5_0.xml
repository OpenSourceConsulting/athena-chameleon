<?xml version="1.0" encoding="utf-8"?>
<jeus-system xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://www.tmaxsoft.com/xml/ns/jeus"
			 xsi:schemaLocation="http://www.tmaxsoft.com/xml/ns/jeus schema/v5_0/jeus-main.xsd">
    <node>
        <name>test</name>
        <engine-container>
            <name>container1</name>
            <id>100</id>
            <base-port>10751</base-port>
            <command-option>-Xms256m -Xmx512m -Djeus.session.version=SOCKET -Djeus.sessionmgr.session1=smsan1:9736</command-option>
            <engine-command>
                <type>servlet</type>
                <name>engine1</name>
            </engine-command>
            <sequential-start>true</sequential-start>
            <system-logging>
                <level>INFO</level>
                <handler>
                    <file-handler>
                        <name>handler1</name>
                        <level>INFO</level>
                        <file-name>test_container1.log</file-name>
                        <valid-day>1</valid-day>
                        <buffer-size>1024</buffer-size>
                    </file-handler>
                </handler>
            </system-logging>
            <invocation-manager-action>Warning</invocation-manager-action>
        </engine-container>
        <engine-container>
            <name>container2</name>
            <id>101</id>
            <base-port>10761</base-port>
            <engine-command>
                <type>servlet</type>
                <name>engine2</name>
            </engine-command>
        </engine-container>
    	<class-ftp>true</class-ftp>
        <sequential-start>true</sequential-start>
        <enable-webadmin>true</enable-webadmin>
        <system-logging>
            <level>INFO</level>
            <handler>
                <file-handler>
                    <name>handler1</name>
                    <valid-day>1</valid-day>
                </file-handler>
            </handler>
        </system-logging>
    </node>
    <resource>
        <data-source>
            <database>
                <vendor>oracle</vendor>
                <export-name>datasource1</export-name>
                <data-source-class-name>oracle.jdbc.pool.OracleConnectionPoolDataSource</data-source-class-name>
                <data-source-type>ConnectionPoolDataSource</data-source-type>
                <database-name>(접속 DB이름)</database-name>
                <data-source-name>oracle.jdbc.pool.OracleConnectionPoolDataSource</data-source-name>
                <port-number>1521</port-number>
                <server-name>(접속할 오라클의 IP주소)</server-name>
                <user>(DB 이름)</user>
                <password>(DB 비밀번호)</password>
                <driver-type>thin</driver-type>
                <connection-pool>
                    <pooling>
                        <min>5</min>
                        <max>10</max>
                        <step>1</step>
                        <period>600000</period>
                    </pooling>
                    <wait-free-connection>
                        <enable-wait>true</enable-wait>
                        <wait-time>10000</wait-time>
                    </wait-free-connection>
                </connection-pool>
            </database>
        </data-source>
    </resource>
    <application>
        <absolute-path>D:\PROJECT\</absolute-path>
        <name>A</name>
        <path>A</path>
        <deployment-type>COMPONENT</deployment-type>
        <web-component/>
        <deployment-target>
            <target>
                <engine-container-name>test_container1</engine-container-name>
                <web-context-group>
                    <name>A</name>
                </web-context-group>
            </target>
        </deployment-target>
        <classloading>ISOLATED</classloading>
    </application>
    <application>
        <absolute-path>D:\PROJECT\</absolute-path>
        <name>B</name>
        <path>B</path>
        <deployment-type>COMPONENT</deployment-type>
        <web-component/>
        <deployment-target>
            <target>
                <engine-container-name>test_container2</engine-container-name>
                <web-context-group>
                    <name>B</name>
                </web-context-group>
            </target>
        </deployment-target>
        <classloading>ISOLATED</classloading>
    </application>
</jeus-system>